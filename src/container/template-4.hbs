{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}

<header class="header row g-0">

    <div class="col-3">
        {{> logo}}
    </div>

    <nav class="header_nav col-9">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>            
    </nav>
    
</header>


{{#with main}}
    <main class="main">
        <img src="{{image}}" alt="{{main_image}}" class="main_image">

        <div class="main_content"> 
            <h3 class="main_title">{{heading}}</h3>
            <p class="main_info">{{description}}</p>    
            <a href="{{href}}" class="button main_button">{{button}}</a>
        </div>

    </main>
{{/with}}


<div class="featured">
    {{#each featured}}
        {{> cardFeatured data=this}}
    {{/each}}
</div>



    <div class="form">
        {{#each actions}}
            <div class="form_content">
                <h3 class="form_title">{{heading}}</h3>
                <a href="{{url}}" class="button form_button">{{text}}</a>
            </div>
        {{/each}}
    </div>


    

<footer class="row g-0 footer">

    <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}}</span>

            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}

</footer> 
      


